<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="head.additional">
            <block class="Leeto\AdminTheme\Block\Adminhtml\Colors" name="colors" template="Leeto_AdminTheme::colors.phtml" before="-" />
        </referenceBlock>
        <referenceContainer name="header">
            <block class="Magento\Backend\Block\Page\Header" name="logo" before="-">
                <arguments>
                    <argument name="show_part" xsi:type="string">logo</argument>
                    <argument name="edition" translate="true" xsi:type="string">Community Edition</argument>
                    <argument name="logo_image_src" xsi:type="object">Leeto\AdminTheme\Block\Adminhtml\Logo</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
